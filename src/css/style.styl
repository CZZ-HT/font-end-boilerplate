@import './common.styl';

body {
	background-color: #f5f5f6;
	color: #444;
	height: 100%;
}

header {
	height: 67px;
    line-height: 67px;
    border-bottom: 2px solid #dcdcdc;
    background-color: #fff;
    overflow: hidden;
}

a {
	color: #444;
}
.z-container {
	width: 1200px;
    margin: auto;
}

.z-logo{
	float: left;
	width: 172px;
    height: 67px;
    line-height: 67px;
	img {
		width: 100%;
	}
}
 
.z-nav {
	float: left;
	height: 67px;
	a {
	    float: left;
		height: 100%;
	    margin-right: 40px;
		color: #222;
		font-size: 16px;
		&:hover { 
			color: #f1591e; 
		}
	}
}
.z-login {
	float: right;
	li {
		float: left;
		height: 67px;
	    line-height: 67px;
	    font-size: 12px;
	    margin-right: 20px;
		img {
		    margin-right: 4px;
		}
	}
	a:hover { 
		text-decoration: underline; 
		color: #f1591e; 
	}
}




.z-banner{
	margin: 20px auto;
	img {
		width: 100%;
	}
}

.z-blank {
	background-color: white;
	height: 20px;
	margin: 20px auto 10px;
}

.z-tab {
	height: 57px;
	line-height: 57px;
	background-color: white;
	li {
		float: left;
		min-width: 115px;
		color: #333;
	    font-weight: bold;
	    padding-left: 20px;
	    font-size: 18px;
	}
}
.z-tab-content {
	position: relative;
	background-color: white;
	margin-bottom: 10px;
	padding-left: 20px;
	a:hover {
		color: #f1591e;
	}
	dl {
		width: 100%;
		overflow: hidden;
		height: 45px;
	}
	dt{
		float: left;
		font-weight: bold;
		margin-right: 20px;
	}
	dd{
		float: left;
		margin-right: 10px;
		font-weight: bold;
	}
}
.z-tab-zc {
	dt {
		padding-top: 5px;
	}
	dd {
		margin-right: 30px;
		padding: 2px 10px;
		border-radius: 10px;
		border:1px solid gray;
	}
}
 
 
.z-search {
	position: absolute;
	width: 50%;
	height: 40px;
	left: 30%;
	bottom: 10px;
	input {
		width: 50%;
		height: 22px;
	}
	img {
		margin-left: -5px;
		margin-top:-2px;
		width: 27px;
	}
}

.z-main {
	overflow: hidden;
	.title {
		height: 40px;
		line-height: 40px;
	}
	.title i {
		font-size: 16px;
		font-weight: bold;
		a {
			color: #32a2ed;
			font-size: 12px;
			float: right;
			padding-right: 40px;
			font-weight: bold;
		}
	}
}
.wrap {
	width: 94%;
	margin: 2px auto;
}
.z-news{
	float: left;
	width: 50%;
	.repeat {
		overflow: hidden;
		margin: 10px 5px;
		background-color: white;
	}
	.text {
		float: left;
		width: 60%;
		font-size: 12px;
		margin-top:10px;
		.bold {
			font-size: 14px;
			font-weight: bold;
		}
		.gray {
			margin-top: 10px;
			color: gray;
		}
		.time {
			float: right;
			color: gray;
		}
	}
}
.title a:hover {
	color: #f1591e;
}
.z-news-list {
	background-color: #f5f5f6;
	padding: 2px 0;
}
 
.z-imgwrap {
	float: left;
	max-width: 40%;
	margin: 10px;
}
 

.z-room {
	float: right;
	width: 50%;
}
 
.z-full {
	width: 100%;
	img {
		width: 100%;
	}
	.left {
		float: left;
		width: 50%;
	}
	.right {
		float: right;
		width: 50%;
	}
	.bottom {
		width: 100%;
		clear: both;
	}
}

footer{
	height: 230px;
    padding-left: 50px;
    background-color: #707070;
    color: white;
}
.z-link {
	padding:40px 0 20px;
	font-size: 18px;
	a {
		color: #fff;
		padding-right: 30px;
	}
}

.z-address {
	padding:20px 0;
	img {
		padding-right: 10px;
	}
	i {
		font-style: normal;
		padding-right: 30px;
	}
}

.kefu {
    position: fixed;
    width: 40px;
    right: 0px;
    top: 0px;
    height: 100%;
    background-color: #e8e8e8;
    z-index: 3;
	ul {
	    margin-top: 150px;
		li {
		    position: relative;
		    height: 40px;
		    line-height: 40px;
		    padding-bottom: 10px;
		    border-bottom: 1px solid #444;
		    cursor: pointer;
		    margin-bottom: 10px;
		}
	}

}


img.rightimg {
	width: 22px;
	height: 22px;
    position: relative;
    z-index: 4;
    top: 9px;
    left: 9px;
}
.ziceng {
    position: absolute;
    right: 0px;
    top: 0px;
    height: 40px;
    background: #32a2ed;
    padding-right: 42px;
    display: none;
    width: 70px;
    color: #fff;
    padding-left: 20px;
    font-size: 14px;
}

.erweimaxx1 {
	width: auto;
    padding: 20px;
    padding-right: 42px;
    background: none;
}

.ziceng a {
    color: #fff;
}

.z-mask {
	display: none;
	position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
    left: 0px;
    top: 0px;
    z-index: 11;
}

.z-box {
    position: absolute;
	width: 450px;
    min-height: 400px;
    left: 50%;
    top: 50%;
    margin-left: -225px;
    margin-top: -200px;
    background-color: #fff;
    padding: 10px;
	.head {
		height: 40px;
	    line-height: 40px;
	    position: relative;
	    color: #f1591e;
	    font-size: 16px;
	    margin-left: 20px;
	    font-weight: bold;
	}
	& > textarea {
		width: 400px;
	    height: 150px;
	    line-height: 25px;
	    color: #444;
	    font-size: 12px;
	    border: 1px solid #dcdcdc;
	    margin-left: 20px;
	}
	.head .close {
		position: absolute;
	    right: 0px;
	    top: 8px;
	    width: 24px;
	    height: 24px;
	    background: url(../images/close.png) no-repeat;
	}
	.tips {
		line-height: 50px;
	    margin-left: 20px;
	    color: red;
	}
	.note {
		color: #f1591e;
	    height: 20px;
	    line-height: 20px;
	    padding-left: 20px;
	    margin-bottom: 30px;
	}
	.mobile {
		position: relative;
	    margin-bottom: 20px;
		input {
			height: 28px;
		    line-height: 28px;
		    padding: 10px;
		    width: 300px;
		    margin-left: 10px;
		    border: 1px solid #dcdcdc;
		}
		label {
			height: 40px;
		    line-height: 40px;
		    text-align: right;
		    padding-left: 25px;
		}
	}
	.state {
		padding-left: 25px;
		a {
			color: #f1591e;
		}
	}
	.submit {
		height: 50px;
	    width: 400px;
	    background: #f1591e;
	    font-size: 16px;
	    color: #fff;
	    margin: 20px;
	    border: none;
	}
}









